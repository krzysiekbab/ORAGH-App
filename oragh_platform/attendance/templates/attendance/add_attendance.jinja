{% extends "base.jinja" %}
{% block title %}Dodaj frekwencj{% endblock %}
{% block page_title %}Dodaj frekwencj{% endblock %}
{% block content %}
<!-- Event Type Selection -->
<div class="card mb-4">
  <div class="card-header">
    <h5 class="mb-0">Wybierz typ wydarzenia</h5>
  </div>
  <div class="card-body">
    <form method="get" class="row g-3 align-items-center">
      <div class="col-auto">
        <label for="event_type" class="col-form-label">Typ wydarzenia:</label>
      </div>
      <div class="col-auto">
        <select name="event_type" id="event_type" class="form-select" onchange="this.form.submit()">
          <option value="concert" {% if event_type == 'concert' %}selected{% endif %}> Koncert</option>
          <option value="rehearsal" {% if event_type == 'rehearsal' %}selected{% endif %}> Pr贸ba</option>
          <option value="soundcheck" {% if event_type == 'soundcheck' %}selected{% endif %}> Soundcheck</option>
        </select>
      </div>
      {% if event_type == 'rehearsal' %}
      <div class="col-auto">
        <small class="text-info">
          <i class="fas fa-info-circle"></i> 
          Dla pr贸b dostpna jest opcja poowy obecnoci
        </small>
      </div>
      {% endif %}
    </form>
  </div>
</div>

<!-- Upcoming Concerts Section -->
{% if event_type == 'concert' %}
<div class="card mb-4">
  <div class="card-header">
    <h5 class="mb-0">Nadchodzce koncerty</h5>
  </div>
  <div class="card-body">
    {% if upcoming_concerts %}
      <div class="row">
        {% for concert in upcoming_concerts %}
          <div class="col-md-6 col-lg-4 mb-3">
            <div class="card border-primary h-100">
              <div class="card-body">
                <h6 class="card-title">{{ concert.name }}</h6>
                <p class="card-text">
                  <small class="text-muted">{{ concert.date|date:"d.m.Y" }}</small>
                </p>
                {% if concert.description %}
                  <p class="card-text">{{ concert.description|truncatewords:15 }}</p>
                {% endif %}
                <a href="{% url 'add_attendance' %}?event_type=concert&concert_id={{ concert.id }}" 
                   class="btn btn-sm btn-outline-primary">Wybierz ten koncert</a>
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
    {% else %}
      <p class="text-muted">Brak nadchodzcych koncert贸w.</p>
    {% endif %}
  </div>
</div>
{% endif %}

<!-- Main Form -->
<form method="post" class="mb-4">
  {% csrf_token %}
  {% if error_message %}
    <div class="alert alert-danger">{{ error_message }}</div>
  {% endif %}
  
  <!-- Event Details Section -->
  <div class="card mb-4">
    <div class="card-header">
      <h5 class="mb-0">Szczeg贸y wydarzenia</h5>
    </div>
    <div class="card-body">
      <div class="row g-3">
        <div class="col-md-4">
          <label for="event_name" class="form-label">Nazwa wydarzenia</label>
          <input type="text" class="form-control" id="event_name" name="event_name" 
                 placeholder="Wprowad藕 nazw wydarzenia" required
                 value="{% if selected_concert %}{{ selected_concert.name }}{% elif event_type == 'rehearsal' %}Pr贸ba{% elif event_type == 'soundcheck' %}Soundcheck{% endif %}">
        </div>
        <div class="col-md-3">
          <label for="event_date" class="form-label">Data</label>
          <input type="date" class="form-control" id="event_date" name="event_date" required
                 value="{% if selected_concert %}{{ selected_concert.date|date:'Y-m-d' }}{% else %}{{ today|date:'Y-m-d' }}{% endif %}">
        </div>
        <div class="col-md-5">
          <label for="season" class="form-label">Sezon</label>
          {% if seasons %}
            <select class="form-select" id="season" name="season" required>
              {% for season in seasons %}
                <option value="{{ season.id }}" 
                        {% if season == current_season %}selected{% endif %}>
                  {{ season.name }}
                  {% if season == current_season %} (aktywny){% endif %}
                  {% if not season.is_active %} (nieaktywny){% endif %}
                </option>
              {% endfor %}
            </select>
            {% if current_season %}
              <div class="form-text">Domylnie wybrany aktywny sezon: {{ current_season.name }}. Mo偶esz wybra dowolny sezon.</div>
            {% else %}
              <div class="form-text">Wybierz sezon dla tego wydarzenia.</div>
            {% endif %}
          {% else %}
            <div class="alert alert-warning">
              <strong>Uwaga:</strong> Brak dostpnych sezon贸w. 
              <a href="{% url 'add_season' %}" class="alert-link">Dodaj pierwszy sezon</a> lub skontaktuj si z administratorem.
            </div>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
  <!-- Attendance Section -->
  <div class="card">
    {% include 'shared/musician_grid.jinja' with checkbox_prefix='user_' show_select_all=True header_title='Frekwencja' event_type=event_type %}
  </div>

  <!-- Action Buttons -->
  <div class="d-flex justify-content-between mt-4">
    <a href="{% url 'attendance' %}?event_type={{ event_type }}" class="btn btn-secondary">Anuluj</a>
    <button type="submit" class="btn btn-primary">Zapisz frekwencj</button>
  </div>
</form>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const eventTypeSelect = document.getElementById('event_type');
    const eventNameInput = document.getElementById('event_name');
    const eventDateInput = document.getElementById('event_date');
    
    // Make date input fully clickable
    eventDateInput.addEventListener('click', function() {
        this.showPicker();
    });
    
    // Update event name based on event type selection
    eventTypeSelect.addEventListener('change', function() {
        const selectedConcert = {{ selected_concert|yesno:"true,false" }};
        if (!selectedConcert) {  // Only update if not coming from a selected concert
            if (this.value === 'rehearsal') {
                eventNameInput.value = 'Pr贸ba';
            } else if (this.value === 'soundcheck') {
                eventNameInput.value = 'Soundcheck';
            } else {
                eventNameInput.value = '';
            }
        }
    });
});
</script>

<style>
.card-header h5 {
    color: #495057;
}

/* Responsive improvements */
@media (max-width: 768px) {
    .d-flex.justify-content-between {
        flex-direction: column;
        gap: 0.5rem;
    }
    
    .d-flex.justify-content-between .btn {
        width: 100%;
    }
}
</style>
{% endblock %}
