{% extends "base.jinja" %}

{% block title %}Edytuj profil{% endblock %}
{% block page_title %}Edytuj profil{% endblock %}

{% load crispy_forms_tags %}

{% block content %}
<form method="post" enctype="multipart/form-data" class="mb-4">
  {% csrf_token %}
  
  <div class="card">
    <div class="card-header">
      <h5 class="mb-0">SzczegÃ³Å‚y profilu</h5>
    </div>
    <div class="card-body">
      <div class="row g-3">
        <div class="col-md-6">
          {{ form.non_field_errors }}
          
          {% for field in form %}
            <div class="mb-3">
              <label for="{{ field.id_for_label }}" class="form-label">{{ field.label }}</label>
              {{ field }}
              {% if field.help_text %}
                <div class="form-text">{{ field.help_text }}</div>
              {% endif %}
              {% if field.errors %}
                <div class="text-danger small">{{ field.errors }}</div>
              {% endif %}
            </div>
          {% endfor %}
          
          <div class="mb-3">
            <label for="birthday" class="form-label">Data urodzenia*</label>
            <input type="date" 
                   class="form-control" 
                   id="birthday" 
                   name="birthday" 
                   value="{{ profile.birthday|date:'Y-m-d' }}" 
                   required>
            <div class="form-text">Wybierz swojÄ… datÄ™ urodzenia</div>
          </div>
        </div>
        
        <div class="col-md-6">
          <div class="text-center">
            <h6 class="mb-3">ZdjÄ™cie profilowe</h6>
            {% if profile.photo %}
              <div class="mb-3">
                <img src="{{ profile.photo.url }}" 
                     alt="ZdjÄ™cie profilowe" 
                     class="img-thumbnail rounded-circle" 
                     style="width: 150px; height: 150px; object-fit: cover;">
              </div>
              <p class="text-muted small">Obecne zdjÄ™cie profilowe</p>
            {% else %}
              <div class="mb-3">
                <div class="rounded-circle bg-light d-flex align-items-center justify-content-center mx-auto" 
                     style="width: 150px; height: 150px;">
                  <i class="fas fa-user fa-3x text-muted"></i>
                </div>
              </div>
              <p class="text-muted small">Brak zdjÄ™cia profilowego</p>
            {% endif %}
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="d-flex justify-content-between mt-4">
    <a href="{% url 'home' %}" class="btn btn-secondary">Anuluj</a>
    <button type="submit" class="btn btn-primary">ðŸ’¾ Zapisz zmiany</button>
  </div>
</form>

<style>
/* Enhanced mobile responsiveness */
@media (max-width: 768px) {
  .d-flex.justify-content-between {
    flex-direction: column;
    gap: 1rem;
  }
  
  .d-flex.justify-content-between .btn {
    width: 100%;
    padding: 0.75rem;
  }
  
  .card-header h5 {
    font-size: 1.125rem;
  }
  
  .row.g-3 {
    margin: 0;
  }
  
  .row.g-3 > [class*="col-"] {
    padding: 0.75rem 0;
  }
  
  .form-control {
    font-size: 16px; /* Prevents zoom on iOS */
  }
  
  .form-text {
    font-size: 0.8rem;
    margin-top: 0.5rem;
  }
}

@media (max-width: 576px) {
  .card {
    border-radius: 0.25rem;
    margin: 0 -0.5rem;
  }
  
  .card-body {
    padding: 1rem;
  }
  
  .card-header {
    padding: 0.75rem 1rem;
  }
  
  .form-label {
    font-weight: 600;
    margin-bottom: 0.5rem;
  }
  
  .btn {
    font-size: 0.9rem;
    padding: 0.75rem 1rem;
  }
  
  .img-thumbnail {
    width: 120px !important;
    height: 120px !important;
  }
  
  .rounded-circle.bg-light {
    width: 120px !important;
    height: 120px !important;
  }
  
  .fa-3x {
    font-size: 2rem !important;
  }
}

@media (max-width: 375px) {
  /* Extra small screens */
  .container-fluid, .container {
    padding-left: 0.5rem;
    padding-right: 0.5rem;
  }
  
  .card {
    margin: 0 -0.25rem;
  }
  
  .card-body {
    padding: 0.75rem;
  }
  
  .btn {
    font-size: 0.85rem;
    padding: 0.6rem 0.8rem;
  }
}

/* Improve form accessibility */
.form-control:focus {
  border-color: #86b7fe;
  box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
}

.form-text {
  color: #6c757d;
  line-height: 1.4;
}
</style>
{% endblock %}