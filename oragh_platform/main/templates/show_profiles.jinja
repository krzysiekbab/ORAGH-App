{% extends "base.jinja" %}

{% block title %}Aktywne profile{% endblock %}

{% block content %}
    <style>
      @media (max-width: 576px) {
        .sort-row {
          flex-direction: column !important;
          align-items: stretch !important;
        }
        .sort-select,
        .instrument-filter-select {
          width: 100% !important;
          margin-top: 0.5rem;
        }
        .instrument-filter-form {
          margin-left: 0 !important;
          width: 100%;
        }
      }
    </style>
    <div class="row justify-content-between align-items-center mb-4">
        <h1 class="col-12 col-md-12 col-lg-6 mb-0">Użytkownicy</h1>
    </div>
    <div class="mb-3 d-flex sort-row align-items-center">
        <form method="get" class="d-inline">
            <label for="sort-select" class="me-2">Sortuj według:</label>
            <select id="sort-select" name="sort" class="form-select form-select-sm d-inline w-auto sort-select" onchange="this.form.submit()">
                <option value="surname" {% if sort == 'surname' %}selected{% endif %}>Nazwisko</option>
                <option value="instrument" {% if sort == 'instrument' %}selected{% endif %}>Instrument</option>
                <option value="join" {% if sort == 'join' %}selected{% endif %}>Data dołączenia</option>
            </select>
            {% if sort == 'instrument' %}
                <select name="instrument" class="form-select form-select-sm d-inline w-auto instrument-filter-select" onchange="this.form.submit()">
                    <option value="">Wszystkie instrumenty</option>
                    {% for value, label in instrument_choices %}
                        <option value="{{ value }}" {% if instrument_filter == value %}selected{% endif %}>{{ label }}</option>
                    {% endfor %}
                </select>
            {% endif %}
        </form>
    </div>
    <div class="row">
    <div class="col-12">
        {% for profile in profiles %}
            <div class="card d-flex flex-row align-items-center p-2 mb-3">
                {% if profile.photo %}
                <img src="{{ profile.photo.url }}" class="rounded-circle me-3" alt="Zdjęcie profilowe" style="width: 64px; height: 64px; object-fit: cover;">
                {% endif %}
                <div class="flex-grow-1 d-flex align-items-center justify-content-between">
                    <div>
                        <strong>{{ profile.user.first_name }} {{ profile.user.last_name }}</strong>
                        <span class="text-muted" style="font-size: 0.9em;">({{ profile.user.username }})</span>
                    </div>
                    <a href="{% url 'profile_detail' profile.id %}" class="btn btn-sm btn-outline-primary ms-3">Zobacz profil</a>
                </div>
            </div>
        {% empty %}
            <p>Brak aktywnych użytkowników.</p>
        {% endfor %}
    </div>
    </div>
{% endblock %}
