{% extends "base.jinja" %}

{% block title %}Ustawienia{% endblock %}
{% block page_title %}⚙️ Ustawienia profilu{% endblock %}

{% block content %}
<div class="row g-4">
  <div class="col-md-4">
    <!-- Profile Photo Card -->
    <div class="card">
      <div class="card-body text-center">
        {% if profile.photo %}
          <img src="{{ profile.photo.url }}" 
               alt="Zdjęcie profilowe" 
               class="img-thumbnail rounded-circle mb-3" 
               style="width: 150px; height: 150px; object-fit: cover;">
        {% else %}
          <div class="rounded-circle bg-light d-flex align-items-center justify-content-center mx-auto mb-3" 
               style="width: 150px; height: 150px;">
            <i class="fas fa-user fa-3x text-muted"></i>
          </div>
        {% endif %}
        <h5 class="card-title">{{ user.first_name }} {{ user.last_name }}</h5>
        <p class="text-muted">{{ user.username }}</p>
      </div>
    </div>
  </div>
  
  <div class="col-md-8">
    <!-- Profile Information Card -->
    <div class="card">
      <div class="card-header">
        <h5 class="mb-0">👤 Informacje o profilu</h5>
      </div>
      <div class="card-body">
        <div class="row g-3">
          <div class="col-md-6">
            <label class="form-label text-muted">Imię</label>
            <p class="fw-semibold">{{ user.first_name }}</p>
          </div>
          <div class="col-md-6">
            <label class="form-label text-muted">Nazwisko</label>
            <p class="fw-semibold">{{ user.last_name }}</p>
          </div>
          <div class="col-md-6">
            <label class="form-label text-muted">Email</label>
            <p class="fw-semibold">{{ user.email }}</p>
          </div>
          <div class="col-md-6">
            <label class="form-label text-muted">Instrument</label>
            <p class="fw-semibold">{{ profile.get_instrument_display }}</p>
          </div>
          <div class="col-md-6">
            <label class="form-label text-muted">Data urodzenia</label>
            <p class="fw-semibold">{{ profile.birthday|date:"d.m.Y" }}</p>
          </div>
          <div class="col-md-6">
            <label class="form-label text-muted">Status</label>
            <p class="fw-semibold">
              {% if profile.active %}
                <span class="badge bg-success">Aktywny</span>
              {% else %}
                <span class="badge bg-secondary">Nieaktywny</span>
              {% endif %}
            </p>
          </div>
          <div class="col-md-6">
            <label class="form-label text-muted">Data dołączenia</label>
            <p class="fw-semibold">{{ user.date_joined|date:"d.m.Y" }}</p>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Action Buttons Card -->
    <div class="card mt-4">
      <div class="card-header">
        <h5 class="mb-0">🔧 Akcje</h5>
      </div>
      <div class="card-body">
        <div class="row g-3">
          <div class="col-md-6">
            <a href="{% url 'edit_profile' %}" class="btn btn-primary w-100">
              ✏️ Edytuj profil
            </a>
            <p class="text-muted small mt-2 mb-0">
              Zmień swoje dane osobowe, instrument i zdjęcie profilowe
            </p>
          </div>
          <div class="col-md-6">
            <a href="{% url 'home' %}" class="btn btn-outline-secondary w-100">
              🏠 Powrót do głównej
            </a>
            <p class="text-muted small mt-2 mb-0">
              Wróć do strony głównej aplikacji
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
/* Enhanced mobile responsiveness */
@media (max-width: 768px) {
  .col-md-4 {
    order: 1;
  }
  
  .col-md-8 {
    order: 2;
  }
  
  .card {
    margin-bottom: 1rem;
  }
  
  .btn {
    font-size: 0.9rem;
    padding: 0.75rem;
  }
  
  .img-thumbnail {
    width: 120px !important;
    height: 120px !important;
  }
  
  .rounded-circle.bg-light {
    width: 120px !important;
    height: 120px !important;
  }
  
  .fa-3x {
    font-size: 2rem !important;
  }
}

@media (max-width: 576px) {
  .card {
    border-radius: 0.25rem;
    margin: 0 -0.5rem 1rem -0.5rem;
  }
  
  .card-body {
    padding: 1rem;
  }
  
  .card-header {
    padding: 0.75rem 1rem;
  }
  
  .col-md-6 {
    flex: 0 0 100%;
    max-width: 100%;
  }
  
  .btn {
    margin-bottom: 0.5rem;
  }
}

@media (max-width: 375px) {
  /* Extra small screens */
  .container-fluid, .container {
    padding-left: 0.5rem;
    padding-right: 0.5rem;
  }
  
  .card {
    margin: 0 -0.25rem 1rem -0.25rem;
  }
  
  .card-body {
    padding: 0.75rem;
  }
  
  .btn {
    font-size: 0.85rem;
    padding: 0.6rem 0.8rem;
  }
}

/* Card styling */
.card-header {
  background-color: #f8f9fa;
  border-bottom: 1px solid #dee2e6;
}

.card-header h5 {
  color: #495057;
  margin-bottom: 0;
}

.form-label {
  font-size: 0.875rem;
  font-weight: 500;
  margin-bottom: 0.25rem;
}

.fw-semibold {
  margin-bottom: 1rem;
  font-size: 1rem;
}

.badge {
  font-size: 0.75rem;
  padding: 0.35em 0.65em;
}

.btn {
  border-radius: 0.375rem;
  font-weight: 500;
  transition: all 0.2s ease;
}

.btn:hover {
  transform: translateY(-1px);
  box-shadow: 0 4px 8px rgba(0,0,0,0.1);
}

.text-muted.small {
  font-size: 0.8rem;
  line-height: 1.3;
}
</style>
{% endblock %}
