{% block content %}
<form method="post" class="mb-4">
  {% csrf_token %}
  {{ form.media }}
  {% if form.errors %}
    <div class="alert alert-danger">
        {% for field, errors in form.errors.items %}
            <strong>{{ field }}:</strong>
            <ul>
                {% for error in errors %}
                    <li>{{ error }}</li>
                {% endfor %}
            </ul>
        {% endfor %}
    </div>
  {% endif %}
  
