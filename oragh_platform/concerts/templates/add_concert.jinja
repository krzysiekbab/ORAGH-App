@media (max-width: 768px) {
    .d-flex.justify-content-between {
        flex-direction: column;
        gap: 1rem;
    }
    
    .d-flex.justify-content-between .btn {
        width: 100%;
        padding: 0.75rem;
    }
    
    .card-header h5 {
        font-size: 1.125rem;
    }
    
    .row.g-3 {
        margin: 0;
    }
    
    .row.g-3 > [class*="col-"] {
        padding: 0.75rem 0;
    }
    
    .form-control {
        font-size: 16px; /* Prevents zoom on iOS */
    }
    
    .form-text {
        font-size: 0.8rem;
        margin-top: 0.5rem;
    }
}

@media (max-width: 576px) {
    .card {
        border-radius: 0.25rem;
        margin: 0 -0.5rem;
    }
    
    .card-body {
        padding: 1rem;
    }
    
    .card-header {
        padding: 0.75rem 1rem;
    }
    
    .form-label {
        font-weight: 600;
        margin-bottom: 0.5rem;
    }
    
    .btn {
        font-size: 0.9rem;
        padding: 0.75rem 1rem;
    }
    
    textarea.form-control {
        min-height: 100px;
    }
}

@media (max-width: 375px) {
    /* Extra small screens */
    .container-fluid, .container {
        padding-left: 0.5rem;
        padding-right: 0.5rem;
    }
    
    .card {
        margin: 0 -0.25rem;
    }
    
    .card-body {
        padding: 0.75rem;
    }
    
    .btn {
        font-size: 0.85rem;
        padding: 0.6rem 0.8rem;
    }
}

/* Improve form accessibility */
.form-control:focus {
    border-color: #86b7fe;
    box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
}

.form-text {
    color: #6c757d;
    line-height: 1.4;
}
</style>
{% endblock %}