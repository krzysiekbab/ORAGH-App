{% extends "base.jinja" %}

{% block title %}Edytuj koncert{% endblock %}
{% block page_title %}Edytuj koncert: {{ concert.name }}{% endblock %}

{% block content %}
<form method="post" class="mb-4">
  {% csrf_token %}
  {{ form.media }}
  {% if form.errors %}
    <div class="alert alert-danger">
        {% for field, errors in form.errors.items %}
            <strong>{{ field }}:</strong>
            <ul>
                {% for error in errors %}
                    <li>{{ error }}</li>
                {% endfor %}
            </ul>
        {% endfor %}
    </div>
  {% endif %}
  
  <div class="card">
    <div class="card-header">
      <h5 class="mb-0">Szczegóły koncertu</h5>
    </div>
    <div class="card-body">
      <div class="row g-3">
        <div class="col-md-6">
          <label for="{{ form.name.id_for_label }}" class="form-label">Nazwa koncertu</label>
          {{ form.name }}
          <div class="form-text">Podaj nazwę koncertu</div>
        </div>
        <div class="col-md-6">
          <label for="{{ form.date.id_for_label }}" class="form-label">Data i godzina koncertu</label>
          {{ form.date }}
          <div class="form-text">Wybierz datę i godzinę rozpoczęcia koncertu</div>
        </div>
        <div class="col-12">
          <label for="{{ form.description.id_for_label }}" class="form-label">Opis koncertu</label>
          {{ form.description }}
          <div class="form-text">Opcjonalny opis koncertu (lokalizacja, repertuar, uwagi organizacyjne)</div>
        </div>
        <div class="col-12">
            <label for="{{ form.setlist.id_for_label }}" class="form-label">Setlista</label>
            {{ form.setlist }}
            <div class="form-text">Opcjonalna lista utworów. Każdy utwór w nowej linii.</div>
          </div>
      </div>
      
      <div class="mt-4">
        <h6>Statystyki koncertu:</h6>
        <ul class="list-unstyled">
          <li><strong>Liczba zapisanych muzyków:</strong> {{ concert.musicians.count }}</li>
          <li><strong>Data utworzenia:</strong> {{ concert.date_created|date:"d.m.Y H:i" }}</li>
          <li><strong>Utworzony przez:</strong> {{ concert.created_by.first_name }} {{ concert.created_by.last_name }}</li>
        </ul>
      </div>
    </div>
  </div>

  <div class="d-flex justify-content-between mt-4">
    <a href="{% url 'concert' concert.id %}" class="btn btn-secondary">Anuluj</a>
    <button type="submit" class="btn btn-primary">✏️ Zapisz zmiany</button>
  </div>
</form>

<style>
/* Enhanced mobile responsiveness */
@media (max-width: 768px) {
    .d-flex.justify-content-between {
        flex-direction: column;
        gap: 1rem;
    }
    
    .d-flex.justify-content-between .btn {
        width: 100%;
        padding: 0.75rem;
    }
    
    .card-header h5 {
        font-size: 1.125rem;
    }
    
    .row.g-3 {
        margin: 0;
    }
    
    .row.g-3 > [class*="col-"] {
        padding: 0.75rem 0;
    }
    
    .form-control {
        font-size: 16px; /* Prevents zoom on iOS */
    }
    
    .form-text {
        font-size: 0.8rem;
        margin-top: 0.5rem;
    }
}

@media (max-width: 576px) {
    .card {
        border-radius: 0.25rem;
        margin: 0 -0.5rem;
    }
    
    .card-body {
        padding: 1rem;
    }
    
    .card-header {
        padding: 0.75rem 1rem;
    }
    
    .form-label {
        font-weight: 600;
        margin-bottom: 0.5rem;
    }
    
    .btn {
        font-size: 0.9rem;
        padding: 0.75rem 1rem;
    }
    
    textarea.form-control {
        min-height: 100px;
    }
    
    h6 {
        font-size: 1rem;
        margin-top: 1.5rem;
    }
    
    .list-unstyled li {
        padding: 0.25rem 0;
        border-bottom: 1px solid #e9ecef;
    }
    
    .list-unstyled li:last-child {
        border-bottom: none;
    }
}

@media (max-width: 375px) {
    /* Extra small screens */
    .container-fluid, .container {
        padding-left: 0.5rem;
        padding-right: 0.5rem;
    }
    
    .card {
        margin: 0 -0.25rem;
    }
    
    .card-body {
        padding: 0.75rem;
    }
    
    .btn {
        font-size: 0.85rem;
        padding: 0.6rem 0.8rem;
    }
}

/* Improve form accessibility */
.form-control:focus {
    border-color: #86b7fe;
    box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
}

.form-text {
    color: #6c757d;
    line-height: 1.4;
}

/* Better stats display */
.list-unstyled li {
    font-size: 0.9rem;
    margin-bottom: 0.25rem;
}

.list-unstyled li strong {
    display: inline-block;
    min-width: 140px;
}
</style>
{% endblock %}

