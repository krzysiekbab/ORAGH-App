{% extends "base.jinja" %}

{% block content %}
    <div class="row justify-content-between align-items-center mb-4">
        <h1 class="col-12 col-md-12 col-lg-6 mb-0">Szczegóły koncertu</h1>
    </div>
    <div class="card mb-3 bg-light">
        <div class="card-body">
            <h5 class="card-title">{{ concert.name }}</h5>
            <p class="card-text">{{ concert.description }}</p>
            <p class="card-text"><small class="text-muted">Data: {{ concert.date }}</small></p>
        </div>
    </div>
{% endblock %}