{% extends "base.jinja" %}

{% block title %}{{ concert.name }}{% endblock %}
{% block page_title %}Szczeg√≥≈Çy koncertu{% endblock %}

{% block content %}
<div class="d-flex justify-content-between align-items-center mb-4">
  <h4>{{ concert.name }}</h4>
  <div>
    <a href="{% url 'concerts' %}" class="btn btn-outline-secondary">
      ‚Üê Powr√≥t do koncert√≥w
    </a>
  </div>
</div>

<div class="row mb-4">
  <div class="col-lg-8">
    <div class="card">
      <div class="card-body">
        {% if error %}
          <div class="alert alert-danger">{{ error }}</div>
        {% endif %}
        
        <div class="row g-3 mb-4">
          <div class="col-md-6">
            <h6 class="text-muted mb-1">Data</h6>
            <p class="h5 mb-0">{{ concert.date|date:"d.m.Y" }}</p>
          </div>
          <div class="col-md-6">
            <h6 class="text-muted mb-1">Liczba zapisanych muzyk√≥w</h6>
            <p class="h5 mb-0">
              <span class="badge bg-info fs-6">{{ concert.musicians.count }}</span>
            </p>
          </div>
        </div>
        
        {% if concert.description %}
          <div class="mb-4">
            <h6 class="text-muted mb-2">Opis koncertu</h6>
            <p>{{ concert.description|linebreaks }}</p>
          </div>
        {% endif %}
        
        <div class="border-top pt-3">
          {% if is_joined %}
            <div class="alert alert-success mb-3">
              <strong>‚úÖ Zapisano:</strong> Jeste≈õ zapisany na ten koncert.
            </div>
            <form method="post" action="{% url 'leave_concert' concert.id %}">
              {% csrf_token %}
              <button type="submit" class="btn btn-outline-danger"
                      onclick="return confirm('Czy na pewno chcesz siƒô wypisaƒá z tego koncertu?')">
                üö´ Wypisz siƒô z koncertu
              </button>
            </form>
          {% else %}
            <div class="alert alert-info mb-3">
              <strong>‚ÑπÔ∏è Status:</strong> Nie jeste≈õ jeszcze zapisany na ten koncert.
            </div>
            <form method="post" action="{% url 'join_concert' concert.id %}">
              {% csrf_token %}
              <button type="submit" class="btn btn-primary">
                üéµ Zapisz siƒô na koncert
              </button>
            </form>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
  
  <div class="col-lg-4">
    <div class="card">
      <div class="card-header">
        <h6 class="mb-0">Akcje</h6>
      </div>
      <div class="card-body">
        <div class="d-grid gap-2">
          {% if perms.concerts.change_concert %}
            <a href="{% url 'edit_concert' concert.id %}" class="btn btn-outline-primary">
              ‚úèÔ∏è Edytuj koncert
            </a>
          {% endif %}
          {% if perms.attendance.add_attendance %}
            <a href="{% url 'add_attendance' %}?event_type=concert&concert_id={{ concert.id }}" class="btn btn-outline-success">
              üìù Dodaj frekwencjƒô
            </a>
          {% endif %}
          {% if perms.concerts.delete_concert %}
            <button type="button" class="btn btn-outline-danger" 
                    data-bs-toggle="modal" data-bs-target="#deleteConcertModal">
              üóëÔ∏è Usu≈Ñ koncert
            </button>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</div>

<div class="card">
  <div class="card-header">
    <h5 class="mb-0">Zapisani muzycy ({{ concert.musicians.count }})</h5>
  </div>
  <div class="card-body">
    <div class="row">
      {% for section_name, musicians in sections.items %}
        <div class="col-6 col-md-4 col-lg-3 col-xl-2 mb-4">
          <h6 class="border-bottom pb-2 mb-3">
            {{ section_name }}
            {% if musicians %}
              <span class="badge bg-secondary ms-1">{{ musicians|length }}</span>
            {% endif %}
          </h6>
          <div class="list-group list-group-flush">
            {% if musicians %}
              {% for musician in musicians %}
                <div class="list-group-item px-0 py-1 border-0 d-flex align-items-center">
                  <span class="musician-number me-2">{{ forloop.counter }}.</span>
                  <small>{{ musician.user.first_name }} {{ musician.user.last_name }}</small>
                </div>
              {% endfor %}
            {% else %}
              <div class="list-group-item px-0 py-1 border-0">
                <small class="text-muted fst-italic">Brak muzyk√≥w</small>
              </div>
            {% endif %}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

<!-- Delete Modal -->
{% if perms.concerts.delete_concert %}
  <div class="modal fade" id="deleteConcertModal" tabindex="-1" aria-labelledby="deleteConcertModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header bg-danger text-white">
          <h5 class="modal-title" id="deleteConcertModalLabel">‚ö†Ô∏è Potwierd≈∫ usuniƒôcie</h5>
          <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <div class="alert alert-warning">
            <strong>Uwaga!</strong> Ta operacja jest nieodwracalna.
          </div>
          <p>Czy na pewno chcesz usunƒÖƒá koncert <strong>"{{ concert.name }}"</strong>?</p>
          <ul class="list-unstyled">
            <li><strong>Data:</strong> {{ concert.date|date:"d.m.Y" }}</li>
            <li><strong>Zapisanych muzyk√≥w:</strong> {{ concert.musicians.count }}</li>
          </ul>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Anuluj</button>
          <form method="post" action="{% url 'delete_concert' concert.id %}" style="display: inline;">
            {% csrf_token %}
            <button type="submit" class="btn btn-danger">üóëÔ∏è Usu≈Ñ koncert</button>
          </form>
        </div>
      </div>
    </div>
  </div>
{% endif %}

<style>
/* Enhanced mobile responsiveness */
@media (max-width: 992px) {
  /* Stack main content and sidebar on tablets */
  .col-lg-8, .col-lg-4 {
    flex: 0 0 100%;
    max-width: 100%;
  }
  
  .col-lg-4 {
    margin-top: 1rem;
  }
}

@media (max-width: 768px) {
  .d-flex.justify-content-between {
    flex-direction: column;
    gap: 1rem;
    align-items: stretch;
  }
  
  .d-flex.justify-content-between > div {
    display: flex;
    gap: 0.5rem;
    justify-content: center;
  }
  
  .btn {
    font-size: 0.875rem;
  }
  
  /* Improve content layout on mobile */
  .row.g-3 {
    margin: 0;
  }
  
  .row.g-3 > [class*="col-"] {
    padding: 0.75rem 0;
    border-bottom: 1px solid #e9ecef;
  }
  
  .row.g-3 > [class*="col-"]:last-child {
    border-bottom: none;
  }
  
  /* Musicians grid improvements */
  .col-6.col-md-4.col-lg-3.col-xl-2 {
    flex: 0 0 50%;
    max-width: 50%;
    margin-bottom: 1.5rem;
  }
  
  .card-header h5, .card-header h6 {
    font-size: 1rem;
  }
  
  /* Action buttons stack better */
  .d-grid .btn {
    padding: 0.75rem;
    font-size: 0.875rem;
  }
}

@media (max-width: 576px) {
  /* Single column layout for musicians on small screens */
  .col-6.col-md-4.col-lg-3.col-xl-2 {
    flex: 0 0 100%;
    max-width: 100%;
    margin-bottom: 1rem;
  }
  
  .badge.fs-6 {
    font-size: 0.875rem !important;
  }
  
  .h5 {
    font-size: 1.125rem;
  }
  
  .h4 {
    font-size: 1.25rem;
  }
  
  .card-body {
    padding: 1rem;
  }
  
  /* Mobile adjustments for musician numbering */
  .musician-number {
    min-width: 1rem;
    height: 1rem;
    font-size: 0.6rem;
  }
  
  .badge.bg-secondary {
    font-size: 0.55rem;
    padding: 0.15rem 0.3rem;
  }
  
  .alert {
    padding: 0.75rem;
    font-size: 0.875rem;
  }
  
  /* Improve modal on mobile */
  .modal-dialog {
    margin: 0.5rem;
    max-width: calc(100% - 1rem);
  }
  
  .modal-body {
    padding: 1rem;
  }
  
  /* Better button sizing */
  .btn {
    padding: 0.75rem 1rem;
  }
  
  .btn-sm {
    padding: 0.5rem 0.75rem;
    font-size: 0.8rem;
  }
}

@media (max-width: 375px) {
  /* Extra small screens (iPhone SE, etc.) */
  .container-fluid, .container {
    padding-left: 0.75rem;
    padding-right: 0.75rem;
  }
  
  .card {
    border-radius: 0.25rem;
  }
  
  .btn {
    font-size: 0.8rem;
    padding: 0.6rem 0.8rem;
  }
  
  .modal-dialog {
    margin: 0.25rem;
    max-width: calc(100% - 0.5rem);
  }
}

.list-group-item {
  background-color: transparent;
  font-size: 0.9rem;
}

/* Ensure sections display nicely */
.border-bottom {
  border-bottom: 2px solid #dee2e6 !important;
  padding-bottom: 0.5rem;
  margin-bottom: 0.75rem;
}

/* Empty section styling */
.list-group-item .text-muted.fst-italic {
  font-size: 0.8rem;
  opacity: 0.7;
}

/* Section headers styling */
h6.border-bottom {
  color: #495057;
  font-weight: 600;
  text-transform: uppercase;
  font-size: 0.8rem;
  letter-spacing: 0.5px;
  display: flex;
  align-items: center;
}

/* Musician numbering styling */
.musician-number {
  background-color: #e9ecef;
  color: #495057;
  font-size: 0.7rem;
  font-weight: 600;
  min-width: 1.2rem;
  height: 1.2rem;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

/* Section count badge styling */
.badge.bg-secondary {
  font-size: 0.6rem;
  padding: 0.2rem 0.4rem;
}

/* Improve musician list item spacing */
.list-group-item.d-flex {
  min-height: 1.8rem;
}
</style>
{% endblock %}