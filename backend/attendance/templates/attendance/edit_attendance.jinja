{% extends "base.jinja" %}
{% block title %}Edytuj frekwencj{% endblock %}
{% block page_title %}Edytuj frekwencj{% endblock %}
{% block content %}
<form method="post" class="mb-4">
    {% csrf_token %}
    {% if error_message %}
        <div class="alert alert-danger">{{ error_message }}</div>
    {% endif %}
    
    <!-- Event Details Section -->
    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0">Szczeg贸y wydarzenia</h5>
        </div>
        <div class="card-body">
      <div class="row g-3">
        <div class="col-md-4">
          <label for="event_name" class="form-label">Nazwa wydarzenia</label>
          <input type="text" class="form-control" id="event_name" name="event_name" 
                 value="{{ event.name }}" required>
        </div>
        <div class="col-md-3">
          <label for="event_date" class="form-label">Data</label>
          <input type="date" class="form-control" id="event_date" name="event_date" 
                 value="{{ event.date|date:'Y-m-d' }}" required>
        </div>
        <div class="col-md-5">
          <label for="season" class="form-label">Sezon</label>
          {% if seasons %}
            <select class="form-select" id="season" name="season" required>
              {% for season in seasons %}
                <option value="{{ season.id }}" 
                        {% if season == event.season %}selected{% endif %}>
                  {{ season.name }}
                  {% if season == current_season %} (aktywny){% endif %}
                  {% if not season.is_active %} (nieaktywny){% endif %}
                </option>
              {% endfor %}
            </select>
            {% if event.season %}
              <div class="form-text">Aktualnie przypisany sezon: {{ event.season.name }}. Mo偶esz zmieni na dowolny sezon.</div>
            {% else %}
              <div class="form-text text-warning">To wydarzenie nie ma przypisanego sezonu. Wybierz sezon.</div>
            {% endif %}
          {% else %}
            <div class="alert alert-warning">
              <strong>Uwaga:</strong> Brak dostpnych sezon贸w. 
              <a href="{% url 'add_season' %}" class="alert-link">Dodaj pierwszy sezon</a> lub skontaktuj si z administratorem.
            </div>
          {% endif %}
        </div>
      </div>
      
      <div class="mt-3">
        <h6>Informacje o wydarzeniu:</h6>
        <ul class="list-unstyled">
          <li><strong>Typ wydarzenia:</strong> 
            {% if event.type == 'concert' %}
               Koncert
            {% elif event.type == 'rehearsal' %}
               Pr贸ba
              <small class="text-info ms-2">
                <i class="fas fa-info-circle"></i> 
                Dla pr贸b dostpna jest opcja poowy obecnoci
              </small>
            {% elif event.type == 'soundcheck' %}
               Soundcheck
            {% else %}
              {{ event.type|title }}
            {% endif %}
          </li>
        </ul>
      </div>
        </div>
    </div>

    <!-- Attendance Section -->
    <div class="card">
        {% include 'shared/musician_grid.jinja' with checkbox_prefix='user_' show_select_all=True header_title='Frekwencja' event_type=event.type edit_mode=True %}
    </div>

    <!-- Action Buttons -->
    <div class="d-flex justify-content-between mt-4">
        <a href="{% url 'attendance' %}" class="btn btn-secondary">Anuluj</a>
        <button type="submit" class="btn btn-primary" onclick="return confirmSave()">Zapisz zmiany</button>
    </div>
</form>

<script>
function confirmSave() {
    return confirm('Czy na pewno chcesz zapisa zmiany w tym wydarzeniu?');
}
</script>

<style>
.card-header h5 {
    color: #495057;
}

/* Responsive improvements */
@media (max-width: 768px) {
    .d-flex.justify-content-between {
        flex-direction: column;
        gap: 0.5rem;
    }
    
    .d-flex.justify-content-between .btn {
        width: 100%;
    }
}
</style>
{% endblock %}
